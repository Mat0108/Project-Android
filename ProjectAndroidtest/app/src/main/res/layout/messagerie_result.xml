<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/font2"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:contentDescription="font"
        android:translationY="-1dp"
        app:srcCompat="@drawable/messagerieresult" />

    <ImageView
        android:id="@+id/photo2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:contentDescription="photo"
        app:srcCompat="@drawable/recherchephoto" />

    <ImageView
        android:id="@+id/mask2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:contentDescription="mask"
        app:srcCompat="@drawable/recherchemask" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tata"
        android:textColor="@color/TEXT"
        android:textSize="20sp"
        android:translationX="100dp"
        android:translationY="15dp" />

    <TextView
        android:id="@+id/message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 nouveau message"
        android:textColor="@color/TEXT"
        android:textSize="16sp"
        android:translationX="90dp"
        android:translationY="40dp" />

    <TextView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8sp"
        android:text="."
        android:textColor="#B5A0BACF"
        android:textSize="60sp"
        android:translationX="370dp"
        android:translationY="-20dp" />

</FrameLayout>